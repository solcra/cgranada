---
export interface Props{
    title:string;
}
const {title} = Astro.props;
---

<h1 class="title">{title}</h1>

<style>
    .title {
        font-size: var(--text-3xl);
        color: var(--gray-0);
    }
    .title {
		max-width: 37ch;
		margin-inline: auto;
	}
    @media (min-width: 50em) {
		.title {
			font-size: var(--text-5xl);
		}
        .start .title {
			margin-inline: unset;
		}
	}
</style>