---
interface Props {
	title?: string | undefined;
	pubDate?: string | undefined;
  image?: string | undefined;
  tags?: string[] | undefined;
}

const { title, pubDate, image, tags } = Astro.props;

---
<section>
    <div class="mx-auto max-w-screen-xl px-4 py-8 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 gap-4 md:grid-cols-4 md:items-center md:gap-8">
        <div class="md:col-span-3">
          <img
            src={image}
            class="rounded"
            alt={title}
          />
        </div>
  
        <div class="md:col-span-1">
          <div class="max-w-lg md:max-w-none">
            <h2 class="text-2xl font-semibold text-gray-900 sm:text-3xl">
              {title}
            </h2>
            <span class="flex flex-col sm:gap-y-2 md:items-center md:gap-y-0 md:divide-x md:divede-testcolor">
                <item class="pr-2">
                   {pubDate} 
                </item>
                {
                    tags.map((item)=>(
                      <span
                        class="whitespace-nowrap rounded-full bg-purple-100 px-2.5 py-0.5 text-xs text-purple-600"
                      >
                        {item}
                      </span>
                    ))
                  }
            </span>
            <slot />
          </div>
        </div>
      </div>
    </div>
  </section>